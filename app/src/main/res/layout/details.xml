<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DetailsLayout"
    tools:context="tech.rahulsriram.care.Details">


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/detailtext1"
        android:textSize="20dp"
        android:text="Name:"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Item Type"
        android:id="@+id/detailtext2"
        android:layout_below="@+id/detailtext1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:id="@+id/detailtext3"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detailtext2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext4"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/detailtext1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext5"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/detailtext2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/detailtext4"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/detailtext6"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/detailtext3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/detailtext5"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_send"
        android:id="@+id/mapbutton"
        android:tint="#ffffff"
        app:backgroundTint="#3f51b4"
        app:fabSize="normal"
        app:layout_anchorGravity="end|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>
</RelativeLayout>